@model List<MoviesShopProxy.DomainModel.Movie>

@{ViewBag.Title = "Home Page";
}

<style>
    #moviePoster{
         position:relative;
         width: 200px;
         height: 300px;
         max-height:100%;
         max-width:100%;
         display:block;
         background-size: 100% 100%;
         margin: 10%;
         transition:0.4s;
         -webkit-box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.5);
         -moz-box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.5);
         box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.5);
}

    #moviePoster:hover{
        -ms-transform: scale(1.2);
        -webkit-transform: scale(1.2);
        transform: scale(1.2);
}

    body{
        z-index: 9999;
        text-align:center;
        align-content:center;
}
    .background-image {
        position:fixed;
        left:-15px;
        right: 15px;
        z-index: -1;
        
        display: block;
        background-image: url('http://orig11.deviantart.net/20eb/f/2015/030/6/f/_minflat__dark_material_design_wallpaper__4k__by_dakoder-d8fjqzu.jpg');
        width: 115%;
        height: 130%;
        
        -webkit-filter: blur(10px);
        -moz-filter: blur(10px);
        -ms-filter: blur(10px);
        filter: blur(10px);
}
    .content {
        z-index: 9999;
        
}
</style>

<body>
    <div class="background-image"></div>
    <div class="container-fluid">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
            <a href="@Url.Action("Info","Home",new { id = item.Id })" id="moviePoster" style="background-image:url('@item.imageURL');"></a>
            </div>
        }
     </div>
</body>