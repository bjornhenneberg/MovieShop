@model List<MoviesShopProxy.DomainModel.Genre>

<div class="dropdown pull-right">
    <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
        Filter by Genre
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
        <li><a href="@Url.Action("Index","Home")">All Movies</a></li>
        @foreach (var item in Model)
        {
            <li><a href="@Url.Action("Index","Home",new { genreId = item.Id })">@item.Name</a></li>
        }
    </ul>
</div>
<div class="pull-left">
    <form class="navbar-form" role="search">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search" name="searchString" id="searchString">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </div>
    </form>
</div>
